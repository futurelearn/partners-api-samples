<h1>University application form</h1>

<div>
  <%- if @enrolment_request.request_type == 'degree' %>
    <p>You are applying to enrol on <%= @enrolment_request.degree_title %> (<%= @enrolment_request.degree_code %>)</p>
  <% else %>
    <p>You are applying to enrol on <%= @enrolment_request.program_title %> (<%= @enrolment_request.program_code %>)</p>
  <% end %>

  <%= form_tag do %>
    <%= label_tag :first_name %>
    <%= text_field_tag :first_name, @enrolment_request.first_name %>

    <%= label_tag :last_name %>
    <%= text_field_tag :last_name, @enrolment_request.last_name %>

    <%= label_tag :email %>
    <%= text_field_tag :email, @enrolment_request.email %>
    <%= hidden_field_tag :token, @enrolment_request.token %>
    <%= submit_tag 'Apply' %>
  <% end %>
</div>
